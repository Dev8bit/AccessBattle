<UserControl x:Class="AccessBattleWpf.LinkField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccessBattleWpf"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" >
    <local:CardField 
            Margin="1" x:Name="CardField" Background="Black"
            BorderBrush="DarkGray" BorderThickness="2" CornerRadius="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".15*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height=".15*"/>
            </Grid.RowDefinitions>
            <Viewbox Margin="2" Grid.Row="1">
                <Path
                    Margin="1"
                    Fill="DarkGray"
                    Stroke="DarkGray" StrokeThickness="1"
                    Data="{StaticResource LinkPath}"/>
            </Viewbox>
        </Grid>
    </local:CardField>
</UserControl>
