        MinWidth="310" MinHeight="480"
        Width="424" Height="646"
        Background="Black">
    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>

            <converters:HostPlayerColorConverter x:Key="HostColConvMain" Mode="MainField"/>
            <converters:HostPlayerColorConverter x:Key="HostColConvServer" Mode="ServerField"/>
            <converters:HostPlayerColorConverter x:Key="HostColConvMainInv" Mode="MainField" Invert="True"/>
            <converters:HostPlayerColorConverter x:Key="HostColConvServerInv" Mode="ServerField" Invert="True"/>
            <converters:BoolVisibilityConverter x:Key="VisConv" />

            <GridLength x:Key="FieldDim">50</GridLength>
            <GridLength x:Key="BoardBorderGridThickness">4</GridLength>
            <Thickness x:Key="BoardBorderThickness">4</Thickness>
            <CornerRadius x:Key="BoardBorderCornerRadius">4</CornerRadius>
            <SolidColorBrush x:Key="PlayerBlueDeploymentLineColor" Color="#151560"/>
            <Style x:Key="StackField" TargetType="local:BoardFieldView">
                <Setter Property="FieldBorderBrush" Value="DarkGray"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="1"/>
            </Style>
            <Style x:Key="MainField" TargetType="local:BoardFieldView">
                <Setter Property="FieldBackground" Value="#1F1F1F"/>
                <Setter Property="FieldBorderBrush" Value="OliveDrab"/>
                <Setter Property="Margin" Value="1"/>
            </Style>
            <!--<Style x:Key="MainFieldOrange" TargetType="local:BoardFieldView" BasedOn="{StaticResource MainField}">
                <Setter Property="FieldBackground" Value="#606015"/>
            </Style>
            <Style x:Key="MainFieldBlue" TargetType="local:BoardFieldView" BasedOn="{StaticResource MainField}">
                <Setter Property="FieldBackground" Value="#151560"/>
            </Style>-->

            <!-- Menu Templates -->
            <DataTemplate DataType="{x:Type viewmodel:WelcomeMenuViewModel}">
                <local:WelcomeMenu Width="300" Height="200"/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:NetworkGameMenuViewModel}">
                <local:NetworkGameMenu Width="300" Height="400" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:WaitForJoinMenuViewModel}">
                <local:WaitForJoinMenu Width="300" Height="75" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:AcceptJoinMenuViewModel}">
                <local:AcceptJoinMenu Width="300" Height="200" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:WaitForAcceptMenuViewModel}">
                <local:WaitForAcceptMenu Width="300" Height="200" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:DeploymentViewModel}">
                <local:DeploymentView Width="300" Height="120" />
            </DataTemplate>

        </ResourceDictionary>
    </Window.Resources>
