                Grid.Column="1" Grid.ColumnSpan="10"/>
            <local:BoardFieldView
                Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="4"
                Margin="0,3,0,14" x:Name="ServerFieldOrange" >
                <Viewbox
                    Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="4" Margin="2">
                    <Path RenderTransformOrigin="0.5,0.5"
                        Margin="1"
                        Data="{StaticResource ServerTextPath}"
                        Stroke="{Binding IsPlayerHost, Converter={StaticResource HostColConvServerInv}}" StrokeThickness="1" Fill="White">
                        <Path.RenderTransform>
                            <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                        </Path.RenderTransform>
                    </Path>
                </Viewbox>
            </local:BoardFieldView>
            <local:BoardFieldView
