            <StreamGeometry x:Key="DoorPath2">M9,9L19,9 19,21 9,21z</StreamGeometry>
            <StreamGeometry x:Key="DoorArrowPath">
                F1 M12,7 L12,5, 16,5 16,7 z                  
                M14,4 h-4.5 M14,4 h4.5 
                M14,3 h-3.5 M14,3 h3.5
                M14,2 h-2.5 M14,2 h2.5
